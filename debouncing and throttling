<html>
 <script>
    let timeout;
    function dobouncesum(){
        clearTimeout(timeout);
        timeout = setTimeout(function(){
            sum2()
        },1000);
    } 
    async function sum2(){
        const a = document.getElementById("first number").value;
        const b = document.getElementById("second number").value;

        const response= await fetch("https://sum-server.100xdevs.com/sum?a="+a +"&b="+b)
        const ans = await response.text();
        document.getElementById("final sum").innerHTML = ans;
    }
 </script>
 <body>
    <input oninput="sum2()" id="first number" type = "text" placeholder="First number"></input> <br></br>

    <input oninput="sum2()" id="second number" type = "text" placeholder="First number"></input><br></br>

   
    <div id="final sum"> </div>
 


</body>


</html>
